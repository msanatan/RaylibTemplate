{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "macos-release",
            "generator": "Ninja",
            "binaryDir": "build/macos-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-release",
            "generator": "Ninja",
            "binaryDir": "build/windows-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "web-release",
            "generator": "Ninja",
            "binaryDir": "build/web-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-macos",
            "configurePreset": "macos-release"
        },
        {
            "name": "build-windows",
            "configurePreset": "windows-release"
        },
        {
            "name": "build-web",
            "configurePreset": "web-release"
        }
    ]
}
